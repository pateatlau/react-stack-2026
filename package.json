{
  "name": "react-stack",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "docker:build": "docker build -t react-stack:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t react-stack:dev .",
    "docker:run": "npm run docker:build && docker run -d -p 3000:3000 --name react-stack react-stack:latest",
    "docker:run:dev": "npm run docker:build:dev && docker run -it -p 5173:5173 -p 24678:24678 -v $(pwd):/app --name react-stack-dev react-stack:dev",
    "docker:stop": "docker stop react-stack react-stack-dev 2>/dev/null; exit 0",
    "docker:rm": "docker rm react-stack react-stack-dev 2>/dev/null; exit 0",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:compose:dev:bg": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:compose:down": "docker-compose down --remove-orphans",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:logs:dev": "docker-compose -f docker-compose.dev.yml logs -f"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^1.2.1",
    "lucide-react": "^0.553.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitejs/plugin-react": "5.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5.2.0",
    "vite": "7.2.2",
    "vitest": "^4.0.8"
  }
}
