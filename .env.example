# ========================================
# Frontend Environment Configuration
# ========================================
# Copy this file to:
# - .env.development (for local development)
# - .env.production (for production build)
# ========================================

# Backend API Base URL
# Development: http://localhost:4000
# Production: https://your-api-domain.com
VITE_API_URL=http://localhost:4000

# GraphQL HTTP Endpoint
# Used for queries and mutations
# Development: http://localhost:4000/graphql
# Production: https://your-api-domain.com/graphql
VITE_GRAPHQL_HTTP_URL=http://localhost:4000/graphql

# GraphQL WebSocket Endpoint
# Used for real-time subscriptions
# Development: ws://localhost:4000/graphql
# Production: wss://your-api-domain.com/graphql (use wss:// for HTTPS)
VITE_GRAPHQL_WS_URL=ws://localhost:4000/graphql

# Optional: Feature Flags
# VITE_ENABLE_GRAPHQL=true
# VITE_ENABLE_DEV_TOOLS=true

# Optional: Analytics
# VITE_GA_TRACKING_ID=
# VITE_SENTRY_DSN=
